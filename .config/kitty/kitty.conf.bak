include current-theme.conf

enable_audio_bell no

font_size 16.0

#optional, flashes screen.
visual_bell_duration 0.5

# trails
cursor_trail 3

# open new tab with the present directory
map kitty_mod+enter launch --cwd=current --type=window
map cmd+enter       launch --cwd=current --type=window
map kitty_mod+t     launch --cwd=current --type=tab
map cmd+t           launch --cwd=current --type=tab





# BEGIN_KITTY_FONTS
font_family      JetBrains Mono
bold_font        JetBrains Mono Bold
italic_font      JetBrains Mono Italic
bold_italic_font JetBrains Mono Bold Italic
# END_KITTY_FONTS

# BEGIN_KITTY_THEME
# Kanagawa_dragon
include current-theme.conf
# END_KITTY_THEME
#
# tab bar 
tab_bar_style powerline

